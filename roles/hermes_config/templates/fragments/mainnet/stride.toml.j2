[[chains]]
id = 'stride-1'
rpc_addr = 'http://{{ stride_ip }}:12257'
grpc_addr = 'http://{{ stride_ip }}:12290'
websocket_addr = 'ws://{{ stride_ip }}:12257/websocket'

rpc_timeout = '20s'
account_prefix = 'stride'
key_name = '{{ key_name }}'
store_prefix = 'ibc'
address_type = { derivation = 'cosmos' }
default_gas = 100000
max_gas = 1000000
gas_price = { price = 0.000, denom = 'ustrd' }
gas_multiplier = 1.2
max_msg_num = 30
max_tx_size = 1800000
clock_drift = '15s'
max_block_time = '10s'
trusting_period = '7days'
memo_prefix = '{{ memo }}'
trust_threshold = { numerator = '1', denominator = '3' }

[chains.packet_filter]
policy = 'allow'
list = [
  ['transfer', 'channel-69'], # Axelar
  ['transfer', 'channel-0'], # Cosmos
  ['transfer', 'channel-9'], # Evmos
  ['transfer', 'channel-6'], # Injective
  ['icacontroller-injective-1.DELEGATION', 'channel-76'], # Injective
  ['icacontroller-injective-1.FEE', 'channel-77'], # Injective
  ['icacontroller-injective-1.WITHDRAWAL', 'channel-78'], # Injective
  ['icacontroller-injective-1.REDEMPTION', 'channel-79'], # Injective
  ['transfer', 'channel-8'], # Kujira
  ['transfer', 'channel-5'], # Osmosis
  ['transfer', 'channel-53'], # Persistence
  ['transfer', 'channel-52'], # Terra2
]
